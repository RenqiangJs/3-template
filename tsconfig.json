{
	"compilerOptions": {
		"baseUrl": "./",
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": false,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM"],
		"skipLibCheck": true,
		"noEmit": true,
		"experimentalDecorators": true,
		"paths": {
			"@": ["src"],
			"@/*": ["src/*"],
			"assets/*": ["src/assets/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/utils/index.ts", "src/main.ts", "src/permission.ts", "src/utils/request.js"],
	"references": [{ "path": "./tsconfig.node.json" }],
	"exclude": ["node_modules"]
}
